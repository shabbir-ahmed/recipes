<%= render "shared/page_title", title: "Showing all recipes" %>
<% @recipes.each do |recipe| %>
    <div class="row">
        <div class="col-md-2">
            <section class="chef_info center">
                <%= link_to gravatar_for(recipe.chef, size: 100) %>
            </section>
        </div>
        <div class="col-md-8 well">
            <h4><strong><%= link_to recipe.name, recipe_path(recipe) %></h4>
            <p><%= truncate(recipe.description, length: 150) %></p>
            <p>
                <span class="quiet"><small>Created 
                <%= time_ago_in_words(recipe.created_at) %> ago</small></span>
                <%= link_to "Edit this recipe", edit_recipe_path(recipe), class: "btn btn-xs btn-warning" %>
                <%= link_to "Delete this recipe", recipe_path(recipe), method: :delete, class: "btn btn-xs btn-danger" %>
            </p> 
        </div>
    </div>
<% end %>